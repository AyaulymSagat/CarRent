@model IEnumerable<CarRent.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h2>Cars</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

<br />
<br />
<div class="container marketing">

    <!-- Three columns of text below the carousel -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-7">
                        <h2> @Html.DisplayFor(modelItem => item.Name)</h2>
                        <p>Model: @Html.DisplayFor(modelItem => item.Model)</p>
                        <p>Cost for one day:  @Html.DisplayFor(modelItem => item.price)</p>
                        <p>Year:   @Html.DisplayFor(modelItem => item.Year)</p>
                        <p>Mileage: @Html.DisplayFor(modelItem => item.Run)</p>
                        <p>
                            Brand:  @Html.DisplayFor(modelItem => item.Brand.Name)
                        </p>
                        <p><a class="btn btn-default" asp-action="Details" asp-route-id="@item.carID" role="button">View details &raquo;</a>
                           <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.carID">Delete</a>
                           <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.carID">Edit</a>
                        </p>
                        <p><a href="RentedCars" class="btn btn-primary">Rent Car</a></p>
                       
                    </div>
                    <div class="col-lg-5">
                        <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.CarImage)" alt="Car Image" width="220" height="180">
                    </div>
                </div>
            </div>
        }
    </div>
